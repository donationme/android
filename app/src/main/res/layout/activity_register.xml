<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.github.sadjz.controllers"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.github.sadjz.controllers.Login">

        <EditText
            android:id="@+id/passwordTextfield"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="244dp"
            android:ems="10"
            android:inputType="textPassword"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/confirmPasswordTextfield"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="160dp"
            android:ems="10"
            android:inputType="textPassword"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/usernameTextfield"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:inputType="textPersonName"
            app2:layout_constraintBottom_toTopOf="@+id/textView"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.5"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="21dp"
            android:text="@string/app_username"
            app2:layout_constraintBottom_toTopOf="@+id/usernameTextfield"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.5"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:text="@string/app_password"
            app2:layout_constraintBottom_toTopOf="@+id/passwordTextfield"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.5"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/usernameTextfield" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="97dp"
            android:layout_height="41dp"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="17dp"
            android:text="@string/app_register"
            android:textAlignment="center"
            android:textSize="24sp"
            app2:layout_constraintBottom_toTopOf="@+id/textView2"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.5"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app2:layout_constraintGuide_end="388dp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:onClick="onLoginPressed"
            android:text="@string/app_register"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.508"
            app2:layout_constraintStart_toEndOf="@+id/guideline"
            app2:layout_constraintTop_toBottomOf="@+id/passwordTextfield" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:text="@string/app_confirmPassword"
            app2:layout_constraintBottom_toTopOf="@+id/confirmPasswordTextfield"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.5"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/passwordTextfield" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
