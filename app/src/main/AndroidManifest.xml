<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.sadjz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.LoginActivity"></activity>
        <activity android:name=".controllers.RegisterActivity"></activity>
        <activity android:name=".controllers.HomeActivity"></activity>
        <activity android:name=".controllers.LocationListActivity"></activity>
        <activity android:name=".controllers.LocationDetailsActivity"></activity>
        <activity android:name=".controllers.ItemDetailsActivity"></activity>
        <activity android:name=".controllers.ItemAddActivity"></activity>
        <activity android:name=".controllers.SearchActivity"></activity>

    </application>

</manifest>